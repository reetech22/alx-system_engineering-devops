#!/usr/bin/env bash

# Check if netcat (nc) is installed
if ! command -v nc &> /dev/null; then
    echo "Error: netcat (nc) is not installed. Please install it to run this script."
    exit 1
fi

# Start listening on port 98
echo "Starting server. Waiting for connection..."
while true; do
    echo "Waiting for connection..."
    # Listen on port 98 and send "Hello world" and "test" to any client that connects
    echo -e "Hello world\ntest" | nc -l -p 98 127.0.0.1
done

